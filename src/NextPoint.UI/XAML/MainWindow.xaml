<Window x:Class="NextPoint.UI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="NextPoint" Height="600" Width="800"
        WindowStartupLocation="CenterScreen">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Menu Bar -->
        <Menu Grid.Row="0">
            <MenuItem Header="_File">
                <MenuItem x:Name="MenuConnect" Header="_Connect" />
                <MenuItem x:Name="MenuSettings" Header="_Settings" />
                <Separator/>
                <MenuItem x:Name="MenuExit" Header="E_xit" />
            </MenuItem>
            <MenuItem Header="_Help">
                <MenuItem x:Name="MenuAbout" Header="_About" />
            </MenuItem>
        </Menu>

        <!-- Main Content -->
        <Grid Grid.Row="1" x:Name="MainContent">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="200"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Navigation Panel -->
            <StackPanel Grid.Column="0" Background="#F0F0F0">
                <Button x:Name="NavDashboard" Content="Dashboard" Height="40" Margin="5"/>
                <Button x:Name="NavDevices" Content="Devices" Height="40" Margin="5"/>
                <Button x:Name="NavReports" Content="Reports" Height="40" Margin="5"/>
            </StackPanel>

            <!-- Content Area -->
            <Frame Grid.Column="1" x:Name="ContentFrame" NavigationUIVisibility="Hidden"/>
        </Grid>

        <!-- Status Bar -->
        <StatusBar Grid.Row="2">
            <StatusBarItem x:Name="StatusConnection" Content="Not Connected"/>
            <Separator/>
            <StatusBarItem x:Name="StatusMessage" Content="Ready"/>
        </StatusBar>
    </Grid>
</Window>
